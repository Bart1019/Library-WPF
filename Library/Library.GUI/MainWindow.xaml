<Window x:Class="Library.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.GUI"
        mc:Ignorable="d"
        Title="Library System" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="162"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="162"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="2" Grid.Row="1" FontSize="18" FontFamily="Segoe UI Light">
            Welcome in the Library System
        </TextBlock>
        <Button Grid.Column="1" Grid.Row="3" FontSize="17" Width="120">
            Manage Users
        </Button>
        <Button Grid.Column="2" Grid.Row="3" FontSize="17" Width="140">
            Manage Rentals
        </Button>
        <Button Grid.Column="3" Grid.Row="3" FontSize="17" Width="120">
            Manage Books
        </Button>
    </Grid>
</Window>
