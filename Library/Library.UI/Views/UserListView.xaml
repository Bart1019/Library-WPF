<UserControl x:Class="Library.UI.Views.UserListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.UI.Views"
             xmlns:viewModel ="clr-namespace:Library.Logic.ViewModels;assembly=Library.Logic"
             xmlns:data="clr-namespace:Library.Data.Models;assembly=Library.Data"
             xmlns:v="clr-namespace:Library.UI.Views"
             xmlns:data1="clr-namespace:Library.Data;assembly=Library.Data"
             mc:Ignorable="d" 
             d:DesignHeight="530" d:DesignWidth="800">

    <UserControl.Resources>
        <DataTemplate x:Key="UserTemplate">
            <StackPanel Orientation = "Horizontal">
                <TextBlock Text = "{Binding Path = FullName, Mode = OneWay}" Margin = "4 5 3 5"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Height="200" Margin="0 0 0 0" Orientation="Vertical">
        <Label Content="List of Persons:" FontSize="18" FontWeight="Bold"/>
        <Grid Height="100">
            <StackPanel>
                <ListBox ItemsSource = "{Binding Users}" ItemTemplate="{StaticResource UserTemplate}" SelectedItem = "{Binding SelectedUser}"/>
            </StackPanel>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <ContentControl Content="{Binding SelectedViewModel}"/>

            <Button Height="30" Width ="100" Content="Add User" Margin="4 10 0 0" HorizontalAlignment="Left" Grid.Column="0" Command="{Binding UpdateViewCommand}" CommandParameter="Add"/>
            <Button Height="30" Width ="100" Content="Delete User" Margin="20 10 0 0" HorizontalAlignment="Left" Grid.Column="1" Command="{Binding DeleteCommand}" />
            <Button Height="30" Width ="100" Content="Edit User" Margin="20 10 0 0"  HorizontalAlignment="Left" Grid.Column="2" Command="{Binding UpdateViewCommand}" CommandParameter="Edit" />
        </Grid>
    </StackPanel>
    </Grid>
</UserControl>
